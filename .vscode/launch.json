    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch Rust",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/ff.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": true,
            // Optional: for stepping into Rust standard library source code
            "sourceFileMap": {
                "/rustc/*": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/lib/rustlib/src/rust"
            }
        }
    ]
}
